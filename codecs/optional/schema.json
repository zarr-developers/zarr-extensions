{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "const": "optional"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "mask_codecs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "configuration": {
                "type": "object"
              }
            },
            "required": ["name"],
            "additionalProperties": false
          },
          "minItems": 1
        },
        "data_codecs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "configuration": {
                "type": "object"
              }
            },
            "required": ["name"],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": ["mask_codecs", "data_codecs"],
      "additionalProperties": false
    }
  },
  "required": ["name", "configuration"],
  "additionalProperties": false
}
