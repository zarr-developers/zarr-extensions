{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "name": {
          "const": "numcodecs.bz2"
        },
        "configuration": {
          "type": "object",
          "properties": {
            "level": {
              "type": "integer",
              "minimum": 1,
              "maximum": 9
            }
          },
          "required": ["level"],
          "additionalProperties": false
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    { "const": "numcodecs.bz2" }
  ]
}
