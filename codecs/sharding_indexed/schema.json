{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "enum": ["sharding_indexed"]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "chunk_shape": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          },
          "minItems": 1
        },
        "codecs": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "configuration": {
                    "type": "object"
                  }
                },
                "required": ["name"],
                "additionalProperties": false
              }
            ]
          }
        },
        "index_codecs": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "configuration": {
                    "type": "object"
                  }
                },
                "required": ["name"],
                "additionalProperties": false
              }
            ]
          }
        },
        "index_location": {
          "type": "string",
          "enum": ["start", "end"]
        }
      },
      "required": ["chunk_shape", "codecs", "index_codecs"],
      "additionalProperties": false
    }
  },
  "required": ["name", "configuration"],
  "additionalProperties": false
}
